<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.CashierConfirmController"
            prefWidth="600" prefHeight="400">

    <children>
        <VBox layoutX="20" layoutY="20" spacing="15">

            <!-- Etiquetas donde se inyectarán los valores desde el controlador -->
            <Label fx:id="lblFacturaId" text="ID Factura: --"/>
            <Label fx:id="lblFechaEmitida" text="Fecha Emitida: --"/>
            <Label fx:id="lblTotalFactura" text="Total Factura: --"/>

            <!-- Botón para volver al menú -->
            <HBox spacing="10">
                <Button fx:id="btnBackToMenu" text="Volver al Menú" onAction="#backToMenu"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>