<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  Archivo: adminMenu.fxml
  Descripción: Menú principal del administrador con botones de navegación
-->

<VBox spacing="20.0" alignment="CENTER" 
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controladores.AdminMenuController">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    <children>
        <Label text="Panel Administrativo" styleClass="title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        
        <Region VBox.vgrow="SOMETIMES" prefHeight="20"/>
        
        <!-- Botones del menú principal -->
        <GridPane alignment="CENTER" hgap="20" vgap="20">
            <children>
                <!-- Primera fila -->
                <Button text="Clientes" 
                        onAction="#onClickClientes"
                        prefWidth="150" prefHeight="80"
                        style="-fx-font-size: 14px;"
                        GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        
                <Button text="Productos" 
                        onAction="#onClickProductos"
                        prefWidth="150" prefHeight="80"
                        style="-fx-font-size: 14px;"
                        GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                <Button text="Cajeros" 
                        onAction="#onClickCajeros"
                        prefWidth="150" prefHeight="80"
                        style="-fx-font-size: 14px;"
                        GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                
                <!-- Segunda fila -->
                <Button text="Descuentos" 
                        onAction="#onClickDescuentos"
                        prefWidth="150" prefHeight="80"
                        style="-fx-font-size: 14px;"
                        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        
                <Button text="Informes" 
                        onAction="#onClickInformes"
                        prefWidth="150" prefHeight="80"
                        style="-fx-font-size: 14px;"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                <Button text="Dashboard" 
                        onAction="#onClickDashboard"
                        prefWidth="150" prefHeight="80"
                        style="-fx-font-size: 14px;"
                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        
        <Region VBox.vgrow="SOMETIMES" prefHeight="20"/>
        
    </children>
</VBox>
