<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  Archivo: admin_descuentos.fxml
  Descripción: Gestión de descuentos
-->

<VBox fx:id="descuentosPane"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.admin.AdminDiscountsController"
      alignment="TOP_CENTER" spacing="15.0">

    <padding><Insets top="25" right="30" bottom="25" left="30"/></padding>

    <!-- Título y barra -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <children>
            <Label text="Gestión de Descuentos" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Nueva política"   onAction="#handleAdd"/>
            <Button text="Editar"  onAction="#handleEdit"/>
            <Button text="Eliminar"   onAction="#handleDelete"/>
            <Button text="Volver"      onAction="#handleBack"/>
        </children>
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="tableDescuentos" prefHeight="550.0" VBox.vgrow="ALWAYS">
        <TableColumn fx:id="colType" text="Tipo" prefWidth="140"/>
        <TableColumn fx:id="colValue" text="Valor" prefWidth="100"/>
        <TableColumn fx:id="colValidFrom" text="Desde" prefWidth="120"/>
        <TableColumn fx:id="colValidTo" text="Hasta" prefWidth="120"/>
    </TableView>
</VBox>
