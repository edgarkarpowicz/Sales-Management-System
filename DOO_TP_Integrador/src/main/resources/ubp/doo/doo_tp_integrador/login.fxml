<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  Archivo: login.fxml
  Descripción: pantalla de autenticación al sistema
-->

<BorderPane fx:id="root"
            prefWidth="400.0" prefHeight="300.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.LoginController">

    <!-- ─────────── Contenido principal ─────────── -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Pantalla Login" styleClass="title"/>

                <!-- Formulario -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints valignment="CENTER"/>
                        <RowConstraints valignment="CENTER"/>
                    </rowConstraints>

                    <children>
                        <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="tfUsername"
                                   promptText="Ingrese usuario"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <PasswordField fx:id="pfPassword"
                                       promptText="Ingrese contraseña"
                                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button text="Ingresar" fx:id="btnLogin" onAction="#handleLogin"/>
                        <Button text="Cancelar" fx:id="btnCancel" onAction="#handleCancel"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
